{
  "compilerOptions": {
    "paths": {
      "@Components": ["./components"],
      "@Core": ["./core"],
      "@Core/*": ["./core/*"],
      "@Store": ["./redux/store"],
      "@Store/*": ["./redux/store/*"],
      "@Models": ["./models"],
      "@Models/*": ["./models/*"],
    },  
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  
  "include": [
    "src"
  ]
}
